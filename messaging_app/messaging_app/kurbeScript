#!/bin/bash

echo "===== Kubernetes Local Setup Script ====="

# Start Minikube cluster
echo "Starting Kubernetes cluster using Minikube..."
minikube start

# Check if Minikube started successfully
if [ $? -ne 0 ]; then
    echo " Failed to start Minikube cluster."
    exit 1
fi

# Verify cluster is running
echo " Verifying cluster status..."
kubectl cluster-info

# Retrieve available pods (all namespaces)
echo " Retrieving available pods..."
kubectl get pods --all-namespaces

echo " Kubernetes cluster setup and verification complete!"



